{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["dom", "ES2020"],
    "outDir": "build",
    "rootDir": "src",
    "sourceRoot": "/src",
    "target": "ES2024",
    "types": ["node"]
  },
  "include": ["src/**/*"]
}

